<br>
<div class="make-comment col-12 col-sm-10 offset-sm-1 text-center animated bounce">
  <h2 class="my-font2 text-center">Leave Comment</h2>
  <br>
  <%= simple_form_for @comment, url: wish_comments_path(@wish) do |f| %>
    <%= f.input :message, label: false, placeholder: "Add Comment" %>
    <%= f.submit "Add a Comment", class: "btn btn-primary hideMe clickMe", input_html: {id: "commentsubmit"}%>
  <% end %>
  <hr>
</div>


<script>
  $(function(){
    // check if enter key is pressed on the comment form
    $("#comment_message").keypress(function(e) {
        if(e.which == 13) {
          $(".clickMe").click();
          $(this).val("")
        }
    });
  })

</script>
