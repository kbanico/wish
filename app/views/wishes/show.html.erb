<br>
<div class="float-right white"><%= render "/layouts/coins_ui" %></div>
<br />
<div class="booyah-box col-10 offset-1"  id="kcontainer">
<div id="cloud-container">
  <div class="form">
    <h1 class="text-center">
    <% if @wish.user.username.present? %>
      <%= @wish.user.username %>'s wish:
      <br>
    <% else %>
      WISH
    <% end %>
    </h1>
    <p class="lead text-center"><%= @wish.description %></p>
    <h3 class="text-center">
      <%= @wish.coin_bucket %>
      <% if @wish.coin_bucket == 0 %>
        <i class="fa fa-heart-o" style="color:red;" aria-hidden="true"></i>
      <% else %>
        <i class="fa fa-heart" style="color:red; aria-hidden="true"></i>
      <% end %>
     </h3>
    <%= simple_form_for @donation, url: wish_donations_path(@wish) do |f| %>
      <%= f.input :amount, as: :hidden, input_html: {value: f.object.amount || '1'} %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>&nbsp; Support Wish
      <% end %>
    <% end %>
  </div>
</div>
</div>


