<br>
<div class="float-right white"><%= render "/layouts/coins_ui" %></div>
<br>
<div class="booyah-box col-sm-10 offset-sm-1">
  <h1 class="text-center">The Worlds Wishes</h1>
  <hr>
  <br>

  <% @wishes.each do |wish| %>
    <h2 class="text-center"><%= wish.description%></h2>
    <p><%=wish.coin_bucket%></p>
    <%= simple_form_for @donation, url: wish_donations_path(wish) do |f| %>
      <%= f.input :amount, input_html: {value: f.object.amount || "1"} %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>&nbsp; Support Wish
      <% end %>

    <% end %>
    <%= link_to "view", wish_path(wish) %>
    <br>
  <% end %>
</div>
