<br>
<div class="float-right white fixedElement"><%= render "/layouts/coins_ui" %></div>
<br>
<div class="booyah-box col-sm-10 offset-sm-1">
  <h1 class="text-center my-font">Wish List</h1>
  <hr>
  <br>
 <div class="row">
   <% @wishes.each do |wish| %>
  <%= link_to wish_path(wish) do%>
  <div class="col-6 col-sm-6 wish-link">
      <br>
      <div class="form">
          <h1 class="text-center username">
          <% if wish.user.username.present? %>
            <span class="form-username my-font"><%= wish.user.username%>',s Wish:</span>
            <br>
          <% else %>
           <span class="form-username"> Wish
          <% end %>
          </h1>
          <p class="lead text-center wish-description"><%= wish.description %></p>
          <h3 class="text-center">
            <div id="coin_bucket-<%=wish.id%>">
              <span><%= wish.coin_bucket %></span>
            </div>

              <% if wish.coin_bucket == 0 %>
                <span id="fontHeart">
                <i class="fa fa-heart-o" style="color:red;" aria-hidden="true"></i>
                </span>
              <% else %>
                <i class="fa fa-heart" style="color:red;" aria-hidden="true"></i>
              <% end %>

           </h3>
          <% if false %>
            <%= simple_form_for @donation, url: wish_donations_path(wish), remote: true do |f| %>
              <%= f.input :amount, input_html: {value: f.object.amount || '1'} %>
              <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>&nbsp; Support Wish
              <% end %>
            <% end %>

          <% end %>
      </div>
    <% end %>
    <hr>
  </div>
<% end %>

</div>
</div>



